@model IEnumerable<CollegeManagementSystem.Models.Subject>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminMaster.cshtml";
}
<div class="pcoded-content">
    <div class="page-header">
        <div class="page-block">
            <div class="row align-items-center">
                <div class="col-md-8">

                </div>
                <div class="col-md-4">

                </div>
            </div>
        </div>
    </div>
    <div class="pcoded-inner-content">
        <div class="main-body">
            <div class="page-wrapper">
                <div class="page-body">

                    <div class="row m-t-30" style="color:white !important">
                        <div class="col-md-12">
                            <a class="btn btn-primary" href="@Url.Action("Create","Subjects")">Create New</a>
                        </div>
                    </div>
                    <div class="card">
                        <div class="card-header">
                            <h5>SUBJECT TABLE</h5>

                        </div>
                        <div class="card-block">
                            <div class="table-responsive dt-responsive">
                                <table id="complex-header" class="table table-striped table-bordered nowrap">
                                    <thead>
                                        <tr>
                                            <th>S/N</th>
                                            <th>Course</th>
                                            <th>Subject</th>
                                            <th>Teacher</th>
                                            <th>ACTION</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{int serialNo = 1;}
                                        @foreach (var item in Model)
                                        {
                                            {
                                                <tr>
                                                    <td>
                                                        @(serialNo++)
                                                    </td>
                                                    <td>@Html.DisplayFor(modelItem => item.Course.Title)</td>
                                                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                                    <td> @Html.DisplayFor(modelItem => item.Teacher.Name)</td>
                                                    <td>
                                                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                                                    </td>
                                                    <td></td>
                                                </tr>
                                            }
                                        }
                                    </tbody>

                                </table>
                            </div>
                        </div>
                    </div>


                </div>
            </div>
        </div>
        <div id="styleSelector">
        </div>
    </div>
</div>
