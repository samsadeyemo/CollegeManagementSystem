@model IEnumerable<CollegeManagementSystem.Models.Subject>
@using CollegeManagementSystem.Models;
@using CollegeManagementSystem.DataSeedModel
@{
    ViewBag.Title = "Course Student Average Grade";
    Layout = "~/Views/Shared/_AdminMaster.cshtml";
}
<div class="pcoded-content">
    <div class="page-header">
        <div class="page-block">
            <div class="row align-items-center">
                <div class="col-md-8">

                </div>
                <div class="col-md-4">

                </div>
            </div>
        </div>
    </div>
    <div class="pcoded-inner-content">
        <div class="main-body">
            <div class="page-wrapper">
                <div class="page-body">
                    <div class="row m-t-30" style="color:white !important">
                        <div class="col-md-12">
                            <a class="btn btn-primary" href="@Url.Action("StudentsWithCourseInfo","Subjects")">Bact To List</a>
                        </div>
                    </div>
                    <div class="card">
                        <div class="card-header">
                            <h5>COURSE STUDENT AVERAGE GRADE TABLE</h5>

                        </div>
                        <div class="card-block">
                            <div class="table-responsive dt-responsive">
                                <table id="complex-header" class="table table-striped table-bordered nowrap">
                                    <thead>
                                        <tr>
                                            <th>S/N</th>
                                            <th>Course</th>
                                            <th>Student</th>
                                            <th>Average Grade</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{int serialNo = 1;}
                                        @{int averageGrade = 0;}
                                        @foreach (var item in Model.FirstOrDefault().Students)
                                        {
                                            {
                                                <tr>
                                                    <td>
                                                        @(serialNo++)
                                                    </td>
                                                    <td>@Html.DisplayFor(modelItem => item.Subject.Course.Title)</td>
                                                    <td>@Html.DisplayFor(modelItem => item.FullName)</td>


                                                    @if (item.Grade != null)
                                                    {
                                                        averageGrade = 0;
                                                        using (var _context = new SchoolCMSContext())
                                                        {

                                                            int gradeSum = _context.Grades.Where(p => p.Id == item.GradeId).Select(p => p.GradeScore).Sum();
                                                            int totalCourseSubject = _context.Subjects.Where(p => p.CourseId == item.Subject.CourseId).ToList().Count();
                                                            averageGrade = gradeSum / totalCourseSubject;
                                                        }
                                                    }

                                                    <td> @averageGrade</td>

                                                    <td></td>
                                                </tr>
                                            }
                                        }
                                    </tbody>

                                </table>
                            </div>
                        </div>
                    </div>


                </div>
            </div>
        </div>
        <div id="styleSelector">
        </div>
    </div>
</div>
