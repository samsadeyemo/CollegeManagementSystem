@model IEnumerable<CollegeManagementSystem.Models.Student>

@{
                /**/

                ViewBag.Title = "Students Teacher Information";
                Layout = "~/Views/Shared/_AdminMaster.cshtml";
}
<div class="pcoded-content">
    <div class="page-header">
        <div class="page-block">
            <div class="row align-items-center">
                <div class="col-md-8">

                </div>
                <div class="col-md-4">

                </div>
            </div>
        </div>
    </div>
    <div class="pcoded-inner-content">
        <div class="main-body">
            <div class="page-wrapper">
                <div class="page-body">
                    <div class="card">
                        <div class="card-header">
                            <h5>STUDENT WITH TEACHER INFO TABLE</h5>

                        </div>
                        <div class="card-block">
                            <div class="table-responsive dt-responsive">
                                <table id="complex-header" class="table table-striped table-bordered nowrap">
                                    <thead>
                                        <tr>
                                            <th>S/N</th>
                                            <th>Subject</th>
                                            <th>Teacher</th>
                                            <th>No Of Student</th>
                                            <th>ACTION</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{int serialNo = 1;}
                                        @foreach (var item in Model.Select(x => x.Subject).Distinct())
                                        {
                                            {
                                                <tr>
                                                    <td>
                                                        @(serialNo++)
                                                    </td>
                                                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                                    <td>@Html.DisplayFor(modelItem => item.Teacher.Name)</td>
                                                    <td>@item.Students.ToList().Count()</td>
                                                    <td>
                                                        @Html.ActionLink("View Teacher Info", "ViewTeacherInfo", new { id = item.Id }) |
                                                        @Html.ActionLink("View Students Subject Grades", "ViewSubjectStudentGrade", new { id = item.Id })
                                                    </td>
                                                    <td></td>
                                                </tr>
                                            }
                                        }
                                    </tbody>

                                </table>
                            </div>
                        </div>
                    </div>


                </div>
            </div>
        </div>
        <div id="styleSelector">
        </div>
    </div>
</div>
